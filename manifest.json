{
    "manifest_version": 2,

    "name": "Regular Developer Tools",
    "description": "A Chrome extension for inspecting regularjs compoents",
    "version": "0.1",
    "devtools_page": "devtools.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "background": {
        "persistent": true,
        "scripts": ["/backend/background.js"]
    },

    "browser_action": {
        "default_icon": "/assets/regular.png"
    },
    "icons": {
        "16": "/assets/regular.png",
		"48": "/assets/regular.png",
		"128": "/assets/regular.png"
    },

    "web_accessible_resources": ["/frontend/inject.js", "/frontend/content.js", "/frontend/hook.js", "/frontend/circular-json.js"],

    "permissions": [
        "http://*/*",
        "https://*/*",
        "file://*"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["/frontend/hook.js"],
        "run_at": "document_start"
    }]
}
