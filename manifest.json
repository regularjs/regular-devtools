{
    "manifest_version": 2,

    "name": "Regular Developer Tools",
    "description": "A Chrome extension for inspecting regularjs components",
    "version": "0.9.1",
    "devtools_page": "devtools.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "background": {
        "persistent": true,
        "scripts": ["./src/backend/background.js"]
    },

    "browser_action": {
        "default_icon": "/assets/regular.png"
    },
    "icons": {
        "16": "/assets/regular.png",
		"48": "/assets/regular.png",
		"128": "/assets/regular.png"
    },

    "web_accessible_resources": [
        "/src/frontend/inject.js",
        "/src/frontend/content.js",
        "/src/frontend/hook.js",
        "/dist/inject.bundle.js",
        "/lib/material.min.js",
        "/lib/material.min.css",
        "/lib/Roboto-Regular.ttf"
    ],

    "permissions": ["<all_urls>", "tabs", "debugger"],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["./src/frontend/hook.js"],
        "run_at": "document_start"
    }]
}
